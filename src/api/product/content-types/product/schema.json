{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "type": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "price": {
      "type": "decimal"
    },
    "stock": {
      "type": "integer",
      "required": true,
      "min": 0
    },
    "available": {
      "type": "boolean"
    },
    "description": {
      "type": "text"
    },
    "image_url": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "flower_details": {
      "type": "json"
    },
    "fill_stock_date": {
      "type": "date"
    }
  }
}
